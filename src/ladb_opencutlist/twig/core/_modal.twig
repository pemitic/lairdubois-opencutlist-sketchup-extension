
{# set title #}
{# set bodyClasses (facultative) #}
{# set noDefaultClose (facultative) #}

{% set noDefaultClose = noDefaultClose|default(false) %}
{% set noHeader = noHeader|default(false) %}

{% block modal %}
    <div id="{{ id }}" class="modal{% if classes is defined %} {{ classes }}{% endif %}"{% if noDefaultClose %} data-keyboard="false" data-backdrop="static"{% endif%} role="dialog" tabindex="-1" aria-hidden="true" aria-labelledby="{{ id }}_label">
        {% block dialog %}
            <div class="modal-dialog">
                {% block content %}
                    <div class="modal-content">
                        {% block contentInner %}
                            {% block header %}
                                {% if not noHeader %}
                                    <div class="modal-header">
                                        {% block headerInner %}
                                            {% if not noDefaultClose %}<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>{% endif %}
                                            {% if title is defined %}<h3 id="{{ id }}_label" class="modal-title">{{ title|raw }}</h3>{% endif %}
                                        {% endblock %}
                                    </div>
                                {% endif %}
                            {% endblock %}
                            {% block body %}
                                <div class="modal-body{% if bodyClasses is defined %} {{ bodyClasses }}{% endif %}">
                                    {% block bodyInner %}{% endblock %}
                                </div>
                            {% endblock %}
                            {% block footer %}
                                <div class="modal-footer">
                                    {% block footerInner %}{% endblock %}
                                </div>
                            {% endblock %}
                        {% endblock %}
                    </div>
                {% endblock %}
            </div>
        {% endblock %}
    </div>
{% endblock %}